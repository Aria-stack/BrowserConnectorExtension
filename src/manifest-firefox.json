{
  "name": "Quicker Connector",
  "version": "0.6.1",
  "manifest_version": 2,
  "description": "Native message connector with Quicker application",
  "background": {
    "scripts": [
      "./background/main.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "addon@getquicker.net"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./libs/jquery-3.6.0.min.js",
        "./content/content.js"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "<all_urls>",
    "contextMenus",
    "storage"
  ],
  "optional_permissions":[
    "bookmarks",
    "browsingData",
    "topSites",    
    "downloads",
    "history",
    "cookies",
    "sessions",
    "management"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "homepage_url": "https://getquicker.net"
}